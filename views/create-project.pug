doctype html
html
  head
    title
    title Create Issue
    link(rel='stylesheet', type='text/css', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/navbar-dashboard.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/create-issue.css')

  body
    nav.navbar.navbar-expand-lg.navbar-custom.py-2
      a.navbar-brand.text-white(href='/')
        img.d-inline-block.align-center(src='/icons/bug.png', width='64', height='64', alt='')
        | 	  	BugTracker
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse.justify-content-end
        .navbar-nav
          a.nav-item.nav-link.text-white.nit-custom(href='/logout')
            | Logout 
            span.sr-only (current)
    
    .sidenav.clr-side
      .clr-side-hvr
        a(href='/dashboard')
          img.align-center(src='/icons/house-fill.svg', width='24', height='24', alt='')
          br
          | 				Home
      hr
      .clr-side-hvr
        a(href='/issues')
          img.align-center(src='/icons/file-ruled.svg', width='24', height='24', alt='')
          br
          | 				Issues
      hr
      .clr-side-hvr
        a(href='/projects')
          img.align-center(src='/icons/grid.svg', width='24', height='24', alt='')
          br
          | 				Projects
        hr
      .clr-side-hvr
        a(href='/progress')
          img.align-center(src='/icons/graph-up.svg', width='24', height='24', alt='')
          br
          | 				Progress
    
    .form
      form(action='/projects', method='POST')
        .custom-header
          | Project Info
        .form-group
          label(for='projectName') Name of Project
          input.form-control(type='text', placeholder='Enter project name', name="projectName", required)
        .form-group
          label(for='head-usr') Head Username
          div
            input#headId(list='available-usernames', name='headUsr', required, autocomplete="off")
            datalist#available-usernames
              -for(var i=0; i<users.length; i++)
                option(value=users[i].username)
        .form-group
          label(for='summary')
            | Summary 
            small.text-muted (max 200 characters)
          textarea.form-control(rows='3', maxlength='200', title='maximum 200 characters', placeholder='summary', name="summary", required='')
        .form-group
          label(for='exp-end-date')  Expected end date 
          input(type='date', name="expDate", required)
        button.btn.btn-primary(type='submit') Submit
