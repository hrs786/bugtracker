doctype html
html
  head
    title Project
    link(rel='stylesheet', type='text/css', href='/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/navbar-dashboard.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/projects-options.css')
  

  body
    nav.navbar.navbar-expand-lg.navbar-custom.py-2
      a.navbar-brand.text-white(href='/')
        img.d-inline-block.align-center(src='/icons/bug.png', width='64', height='64', alt='')
        | 	  	BugTracker
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse.justify-content-end
        .navbar-nav
          a.nav-item.nav-link.text-white.nit-custom(href='/logout')
            | Logout
            span.sr-only (current)
      

    .sidenav.clr-side
      .clr-side-hvr
        a(href='/profile')
          img.align-center(src='/icons/person-fill.svg', width='24', height='24', alt='')
          br
          |         Profile
      hr
      .clr-side-hvr
        a(href='/dashboard')
          img.align-center(src='/icons/house-fill.svg', width='24', height='24', alt='')
          br
          | 				Home
      hr
      .clr-side-hvr
        a(href='/issues')
          img.align-center(src='/icons/file-ruled.svg', width='24', height='24', alt='')
          br
          | 				Issues
      hr
      .clr-side-hvr
        a(href='/projects')
          img.align-center(src='/icons/grid.svg', width='24', height='24', alt='')
          br
          | 				Projects
        hr
      .clr-side-hvr
        a(href='/progress')
          img.align-center(src='/icons/graph-up.svg', width='24', height='24', alt='')
          br
          | 				Progress
    

    .main.h-100
      .container-fluid.h-100
        .row.h-100
          .col-xs-12.col-md-6.bg-success
            .card.card-custom
              .card-body
                h5.card-title.cntr Description
                img.card-img(src='/icons/question.png', alt='')
                p.card-text.cntr What this project is for?
                .cntr
                  a.btn.btn-primary(href='#') Explore
            
            .card.card-custom
              .card-body
                h5.card-title.cntr(title='Project Name') Issues
                img.card-img(src='/icons/issue.png', alt='')
                p.card-text.cntr Issues maintained
                .cntr
                  a.btn.btn-primary(href=`/projects/`+project_id+`/issues`) Explore
          

          .col-xs-12.col-md-6.bg-danger
            .card.card-custom
              .card-body
                h5.card-title.cntr Members
                img.card-img(src='/icons/team.png', alt='')
                p.card-text.cntr Collaborators in project
                .cntr
                  a.btn.btn-primary(href='#') Explore
            
            .card.card-custom
              .card-body
                h5.card-title.cntr Progress
                img.card-img(src='/icons/graph-up.svg', alt='')
                p.card-text.cntr How much is project completed?
                .cntr
                  a.btn.btn-primary(href='#') Explore
